---
import { Image } from 'astro:assets';

import ProducsCarousel from '../components/ProducsCarousel.astro';

import logoPaulVoormann from '../img/logoPaulVoormannFullBlue.png';
import logoPevaBeneluxGreen from '../img/logoPevaBeneluxFullGreen.png';
---

<!doctype html>
<html lang="nl">
  <head>
    <meta name="robots" content="noindex,nofollow" />
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <title>
      Peva Benelux - Officiële Benelux Importeur van Paul Voormann Producten
    </title>
    <meta
      name="description"
      content="Peva Benelux is de officiële importeur van Paul Voormann huidverzorgings- en reinigingsproducten voor de Benelux. Ontdek ons assortiment van hoogwaardige producten voor professioneel gebruik."
    />
    <meta
      name="keywords"
      content="Peva Benelux, Paul Voormann, huidverzorging, reinigingsproducten, Benelux importeur"
    />
    <link rel="sitemap" href="/sitemap-index.xml" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
  </head>

  <body class="flex h-screen items-center justify-center">
    <div class="w-full max-w-2xl rounded-lg bg-white p-8 shadow-xl">
      <header class="mb-8 grid grid-cols-2 gap-10">
        <Image
          src={logoPevaBeneluxGreen}
          alt="Peva Benelux Logo"
          class="h-16 w-auto object-contain"
        />
        <Image
          src={logoPaulVoormann}
          alt="Paul Voormann Logo"
          class="h-16 w-auto object-contain"
        />
      </header>

      <h1 class="mb-8 text-center text-4xl font-bold">
        Officiële Benelux Importeur
      </h1>

      <ProducsCarousel />

      <div class="mb-8 space-y-4">
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          <a
            href="mailto:info@pevabenelux.nl"
            class="text-voormann-blue hover:underline"
          >
            info@pevabenelux.nl
          </a>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          <span class="text-gray-800">+31 (0)6 55 55 55 55</span>
        </div>
        <div class="flex items-center gap-2">
          <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map"><path d="M14.106 5.553a2 2 0 0 0 1.788 0l3.659-1.83A1 1 0 0 1 21 4.619v12.764a1 1 0 0 1-.553.894l-4.553 2.277a2 2 0 0 1-1.788 0l-4.212-2.106a2 2 0 0 0-1.788 0l-3.659 1.83A1 1 0 0 1 3 19.381V6.618a1 1 0 0 1 .553-.894l4.553-2.277a2 2 0 0 1 1.788 0z"/><path d="M15 5.764v15"/><path d="M9 3.236v15"/></svg>
          <span class="text-gray-800">
            Straatnaam 53, 1234AB City, Nederland
          </span>
        </div>
      </div>

      <div class="text-center">
        <a
          href="https://paul-voormann.com/en/"
          target="_blank"
          rel="noopener noreferrer"
          class="inline-block rounded-full bg-blue-500 px-6 py-3 font-bold text-white transition duration-300 ease-in-out hover:bg-blue-700"
        >
          Bezoek de Paul Voormann Website
        </a>
      </div>
    </div>
  </body>
</html>
